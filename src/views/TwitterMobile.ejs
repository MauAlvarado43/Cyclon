<style type="text/css">
    html, body {
        width:100% !important;
        height: 100% !important;
        margin: 0px !important;
        padding: 0px !important;
    }
</style>

<body id="body" data-spy="scroll" data-target=".fixed-top">

    <style>
        .twitter-timeline {
            width: 100% !important;
        }
    </style>

    <div>
        <center>
            <a class="twitter-timeline" data-lang="<%= assets.locale %>" data-theme="light" href="https://twitter.com/HyperSoftCode1?ref_src=twsrc%5Etfw">
                Tweets by HyperSoftCode1
            </a> 
        </center>
    </div>
    
</body>

<script>
    const urlParams = new URLSearchParams(window.location.search);
    
    if(urlParams.get("dark") == "true") {
        document.getElementById("body").style.backgroundColor = "#292F33"
        document.getElementsByClassName("twitter-timeline")[0].setAttribute("data-theme", "dark")

    }

</script>

