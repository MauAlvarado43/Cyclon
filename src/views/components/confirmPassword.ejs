<div class="modal fade" id="modalPasswordVerification" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalPasswordVerificationLabel" style="color: black;"> <%= assets.titles.verify %> </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="color: black;">

                <form>

                    <div class="form-group">
                        <label for="passwordVerification"><%= assets.inputs.verify_password %></label>
                        <input type="password" class="form-control" id="passwordVerification" aria-describedby="emailHelp" placeholder="*******" v-model="passwordVerify" @keyup.enter="verifyPassword">
                        <ul id="errorVerificationLabel" style="visibility: hidden;">
                            <li style="color: red; margin-left: 5%; text-align: left;" id="passwordMessage"></li>
                        </ul>
                    </div>

                    <div class="form-group">
                        <button type="button" class="btn mb-3 btn-block" @click="verifyPassword" style=" background-color: #5260ff; color: white;" onmouseover="this.style.background = '#4d57c5'" onmouseout="this.style.background = '#5260ff'"><%= assets.buttons.verify %></button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>