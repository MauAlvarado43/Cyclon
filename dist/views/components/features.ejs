<div id="features" class="tabs">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2><%= assets.features.title %></h2>
                <div class="p-heading p-large"><%= assets.features.description %></div>
            </div>
        </div>
        <div class="row">

            <ul class="nav nav-tabs" id="lenoTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="nav-tab-1" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true"><i class="fas fa-map"></i><%= assets.features.labels.geolocation %></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="nav-tab-2" data-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2" aria-selected="false"><i class="fas fa-cloud"></i><%= assets.features.labels.monitoring %></a>
                </li>
            </ul>

            <div class="tab-content" id="lenoTabsContent">
                
                <div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="tab-1">
                    <div class="container">
                        <div class="row">
                            
                            <div class="col-lg-4">
                                <div class="card left-pane first">
                                    <div class="card-body">
                                        <div class="text-wrapper">
                                            <h4 class="card-title"><%= assets.features.titles.places %></h4>
                                            <p><%= assets.features.texts.places %></p>
                                        </div>
                                        <div class="card-icon">
                                            <i class="far fa-compass"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="card left-pane">
                                    <div class="card-body">
                                        <div class="text-wrapper">
                                            <h4 class="card-title"><%= assets.features.titles.analysis %></h4>
                                            <p><%= assets.features.texts.analysis %></p>
                                        </div>
                                        <div class="card-icon">
                                            <i class="fas fa-chart-area"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="card left-pane">
                                    <div class="card-body">
                                        <div class="text-wrapper">
                                            <h4 class="card-title"><%= assets.features.titles.history %></h4>
                                            <p><%= assets.features.texts.history %></p>
                                        </div>
                                        <div class="card-icon">
                                            <i class="fas fa-history"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <img class="img-fluid" src="images/features-iphone-1.png" alt="alternative">
                            </div>

                            <div class="col-lg-4">
                                <div class="card right-pane first">
                                    <div class="card-body">
                                        <div class="card-icon">
                                            <i class="fas fa-clock"></i>
                                        </div>
                                        <div class="text-wrapper">
                                            <h4 class="card-title"><%= assets.features.titles.alerts %></h4>
                                            <p><%= assets.features.texts.alerts %></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card right-pane">
                                    <div class="card-body">
                                        <div class="card-icon">
                                            <i class="fas fa-briefcase"></i>
                                        </div>
                                        <div class="text-wrapper">
                                            <h4 class="card-title"><%= assets.features.titles.filter %></h4>
                                            <p><%= assets.features.texts.filter %></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card right-pane">
                                    <div class="card-body">
                                        <div class="card-icon">
                                            <i class="fas fa-exclamation"></i>
                                        </div>
                                        <div class="text-wrapper">
                                            <h4 class="card-title"><%= assets.features.titles.prediction %></h4>
                                            <p><%= assets.features.texts.prediction %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="tab-2">
                    <div class="container">
                        <div class="row">

                            <div class="col-md-4">
                                <img class="img-fluid" src="images/features-iphone-2.png" alt="alternative">
                            </div>

                            <div class="col-md-8">
                                <div class="text-area">
                                    <h3><%= assets.features.labels.track_hurricaine %></h3>
                                    <p><%= assets.features.texts.track_hurricaine %></p>
                                </div>
                                
                                <div class="icon-cards-area">

                                        <div class="card">
                                            <div class="card-icon">
                                                <i class="far fa-compass"></i>
                                            </div>
                                            <div class="card-body">
                                                <h4 class="card-title"><%= assets.features.titles.places %></h4>
                                                <p><%= assets.features.texts.places %></p>
                                            </div>
                                        </div>

                                        <div class="card">
                                            <div class="card-icon">
                                                <i class="fas fa-exclamation"></i>
                                            </div>
                                            <div class="card-body">
                                                <h4 class="card-title"><%= assets.features.titles.prediction %></h4>
                                                <p><%= assets.features.texts.prediction %></p>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-icon">
                                                <i class="fas fa-briefcase"></i>
                                            </div>
                                            <div class="card-body">
                                                <h4 class="card-title"><%= assets.features.titles.filter %></h4>
                                                <p><%= assets.features.texts.filter %></p>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-icon">
                                                <i class="far fa-clock"></i>
                                            </div>
                                            <div class="card-body">
                                                <h4 class="card-title"><%= assets.features.titles.alerts %></h4>
                                                <p><%= assets.features.texts.alerts %></p>
                                            </div>
                                        </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="tab-3" role="tabpanel" aria-labelledby="tab-3">
                    <div class="container">
                        <div class="row">

                            <div class="col-md-8">
                                <div class="icon-cards-area">
                                    <div class="card">
                                        <div class="card-icon">
                                            <i class="fas fa-chart-area"></i>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title"><%= assets.features.titles.analysis %></h4>
                                            <p><%= assets.features.texts.analysis %></p>
                                        </div>
                                    </div>
                                    <div class="card">
                                        <div class="card-icon">
                                            <i class="fas fa-history"></i>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title"><%= assets.features.titles.history %></h4>
                                            <p><%= assets.features.texts.history %></p>
                                        </div>
                                    </div>
                                    <div class="card">
                                        <div class="card-icon">
                                            <i class="fas fa-clock"></i>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title"><%= assets.features.titles.alerts %></h4>
                                            <p><%= assets.features.texts.alerts %></p>
                                        </div>
                                    </div>
                                    <div class="card">
                                        <div class="card-icon">
                                            <i class="fas fa-exclamation"></i>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title"><%= assets.features.titles.prediction %></h4>
                                            <p><%= assets.features.texts.prediction %></p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="text-area">
                                    <h3><%= assets.features.labels.monitoring_hurr %></h3>
                                    <p><%= assets.features.texts.monitoring_hurr %></p>
                                </div>
                                
                            </div>

                            <div class="col-md-4">
                                <img class="img-fluid" src="images/features-iphone-3.png" alt="alternative">
                            </div>
                                
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>