{
  "name": "cyclon",
  "version": "1.0.3",
  "description": "A platform that alerts about the world's current Cyclones within Latin America in near real-time.",
  "private": true,
  "license": "GPL-3.0-or-later",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon --exec babel-node src/server.js",
    "start": "node bin/production && python37 src/services/index.py",
    "build": "npm run clean && mkdir dist && babel src -s -d dist && cp -R src/views dist/ && cp -R src/assets dist/ && cp -R src/public dist && node dist/utils/minify.js && cp -R src/services dist/",
    "clean": "rm -rf dist/",
    "test": "nodemon --exec mocha src/test/ --reporter spec --require babel-register",
    "production": "npm run build && node bin/production && python37 src/services/index.py",
    "exportdb": "babel-node ./src/utils/database/exportDB.js"
  },
  "keywords": [],
  "author": "Mauricio Alvarado López - Ángel Gabriel Rodríguez Rodríguez",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-session": "^1.17.1",
    "geoip-lite": "^1.4.2",
    "graphql": "^15.2.0",
    "graphql-tools": "^6.0.12",
    "helmet": "^3.23.2",
    "http": "0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.20",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.10",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "session-memory-store": "^1.0.0",
    "uglify-js": "^3.10.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0",
    "winston-json-formatter": "^0.10.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "faker": "^4.1.0",
    "minify-all": "^1.2.2",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4"
  }
}
